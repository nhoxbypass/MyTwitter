<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_tweet_container"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp">
    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:src = "@drawable/avatar_placeholder"
        android:id="@+id/iv_avatar"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/iv_avatar"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                android:maxLength="13"
                android:textSize="16sp"
                android:ellipsize="end"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                tools:text = "Google"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_username"
                android:layout_toEndOf="@id/tv_username"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:textColor="@color/material_grey_500"
                android:maxLength="10"
                android:ellipsize="end"
                android:id="@+id/tv_user_screenname"
                tools:text = "\@Google"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/material_grey_500"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/tv_time"
                tools:text = "\2 phÃºt"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:autoLink="all"
            android:textColor="@android:color/primary_text_light"
            android:linksClickable="true"
            android:textColorLink="@color/googleBlue"
            tools:text= "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur sagittis iaculis est at gravida. Nunc at metus sit amet eros vulputate dapibus a sed ligula. Nam et malesuada justo."
            android:id="@+id/tv_tweet_body"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_media"
            tools:src="@drawable/placeholder"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:id="@+id/btn_item_reply"
                android:src="@drawable/reply"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:id="@+id/btn_item_retweet"
                android:src="@drawable/unretweet"
                android:background="@android:color/transparent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/tv_count_retweet"
                android:layout_height="wrap_content"
                android:text="23"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:id="@+id/btn_item_like"
                android:src="@drawable/heart_outline"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_count_like"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="45"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>