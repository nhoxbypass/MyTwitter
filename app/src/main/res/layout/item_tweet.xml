<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:src = "@drawable/avatar_placeholder"
        android:id="@+id/iv_avatar"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/iv_avatar"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_username"
                android:textColor="@android:color/primary_text_light"
                android:textStyle="bold"
                tools:text = "Google"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_username"
                android:layout_toEndOf="@id/tv_username"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:id="@+id/tv_user_screenname"
                tools:text = "\@Google"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/tv_time"
                tools:text = "\2 phÃºt"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text= "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur sagittis iaculis est at gravida. Nunc at metus sit amet eros vulputate dapibus a sed ligula. Nam et malesuada justo."
            android:id="@+id/tv_tweet_body"/>
    </LinearLayout>

</RelativeLayout>